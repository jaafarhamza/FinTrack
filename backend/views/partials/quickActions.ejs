<!-- Quick Actions -->
<div class="mt-8 mb-8 flex justify-center">
  <div class="relative rounded-xl p-6 text-white w-fit overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img
        src="/img/balance_bg.png"
        alt="Quick Actions Background"
        class="w-full h-full object-cover opacity-50 blur-sm"
      />
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-r from-blue-700 to-transparent z-10"
    ></div>
    <div class="relative z-20">
      <div class="flex flex-wrap justify-center gap-4">
        <button
          onclick="openTransactionModal('Income')"
          class="bg-gray-200 bg-opacity-40 backdrop-blur-sm rounded-lg p-4 hover:bg-opacity-30 transition duration-200 min-w-[140px]"
        >
          <i class="fas fa-plus text-2xl mb-2 text-blue-700"></i>
          <p class="text-sm font-medium text-white">Add Income</p>
        </button>
        <button
          onclick="openTransactionModal('Expense')"
          class="bg-gray-200 bg-opacity-40 backdrop-blur-sm rounded-lg p-4 hover:bg-opacity-30 transition duration-200 min-w-[140px]"
        >
          <i class="fas fa-minus text-2xl mb-2 text-blue-700"></i>
          <p class="text-sm font-medium text-white">Add Expense</p>
        </button>
        <a
          href="/categories"
          class="bg-gray-200 bg-opacity-40 backdrop-blur-sm rounded-lg p-4 hover:bg-opacity-30 transition duration-200 min-w-[140px] block text-center"
        >
          <i class="fas fa-tags text-2xl mb-2 text-blue-700"></i>
          <p class="text-sm font-medium text-white">Add Category</p>
        </a>
        <a
          href="/saving-goals"
          class="bg-gray-200 bg-opacity-40 backdrop-blur-sm rounded-lg p-4 hover:bg-opacity-30 transition duration-200 min-w-[140px] block text-center"
        >
          <i class="fas fa-piggy-bank text-2xl mb-2 text-blue-700"></i>
          <p class="text-sm font-medium text-white">Create Goal</p>
        </a>
        <button
          class="bg-gray-200 bg-opacity-40 backdrop-blur-sm rounded-lg p-4 hover:bg-opacity-30 transition duration-200 min-w-[140px]"
        >
          <i class="fas fa-download text-2xl mb-2 text-blue-700"></i>
          <p class="text-sm font-medium text-white">Export Data</p>
        </button>
      </div>
    </div>
  </div>
</div>
