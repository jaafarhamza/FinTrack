<!-- Quick Stats Cards -->
<div class="max-w-7xl mx-auto mb-8 pr-10 pl-10">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Monthly Salary Card -->
    <div class="bg-gray-200 rounded-xl p-6 shadow-lg card-hover">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Monthly Salary</p>
          <p class="text-2xl font-bold text-green-600">$<%= quickStats.monthlySalary.amount.toFixed(2) %></p>
          <p class="text-xs text-green-500 mt-1">
            <i class="fas fa-arrow-up mr-1"></i><%= quickStats.monthlySalary.percentage %>% of Current Balance
          </p>
        </div>
        <div class="bg-green-100 p-3 rounded-full">
          <i class="fas fa-arrow-up text-green-600 text-xl"></i>
        </div>
      </div>
    </div>

    <!-- Other Income Card -->
    <div class="bg-gray-200 rounded-xl p-6 shadow-lg card-hover">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Other Incomes</p>
          <p class="text-2xl font-bold text-yellow-600">$<%= quickStats.otherIncome.amount.toFixed(2) %></p>
          <p class="text-xs text-yellow-500 mt-1">
            <i class="fas fa-plus mr-1"></i><%= quickStats.otherIncome.percentage %>% of Current Balance
          </p>
        </div>
        <div class="bg-yellow-100 p-3 rounded-full">
          <i class="fas fa-plus-circle text-yellow-600 text-xl"></i>
        </div>
      </div>
    </div>

    <!-- Monthly Expenses Card -->
    <div class="bg-gray-200 rounded-xl p-6 shadow-lg card-hover">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Monthly Expenses</p>
          <p class="text-2xl font-bold text-red-600">$<%= quickStats.monthlyExpenses.amount.toFixed(2) %></p>
          <p class="text-xs text-red-500 mt-1">
            <i class="fas fa-arrow-down mr-1"></i><%= quickStats.monthlyExpenses.percentage %>% of Current Balance
          </p>
        </div>
        <div class="bg-red-100 p-3 rounded-full">
          <i class="fas fa-arrow-down text-red-600 text-xl"></i>
        </div>
      </div>
    </div>

    <!-- Saving Goals Progress Card -->
    <div class="bg-gray-200 rounded-xl p-6 shadow-lg card-hover">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Saving Goals Progress</p>
          <p class="text-2xl font-bold text-blue-600">$<%= quickStats.savingGoalsProgress.amount.toFixed(2) %></p>
          <% if (quickStats.savingGoalsProgress.hasActiveGoals) { %>
            <p class="text-xs text-blue-500 mt-1">
              <i class="fas fa-chart-line mr-1"></i><%= quickStats.savingGoalsProgress.totalGoals %> Active Goal<%= quickStats.savingGoalsProgress.totalGoals > 1 ? 's' : '' %>
            </p>
          <% } else { %>
            <p class="text-xs text-gray-500 mt-1">
              <i class="fas fa-info-circle mr-1"></i>No active goals
            </p>
          <% } %>
        </div>
        <div class="bg-blue-100 p-3 rounded-full">
          <i class="fas fa-piggy-bank text-blue-600"></i>
        </div>
      </div>
    </div>
  </div>
</div>