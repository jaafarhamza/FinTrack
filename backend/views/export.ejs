<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3B82F6',
                        secondary: '#1E40AF',
                        accent: '#10B981',
                        success: '#10B981',
                        warning: '#F59E0B',
                        danger: '#EF4444'
                    }
                }
            }
        }
    </script>
    <style>
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        .export-btn {
            transition: all 0.3s ease;
        }
        .export-btn:hover {
            transform: scale(1.05);
        }
    </style>
</head>

<body class="bg-gradient-to-b from-gray-900 to-gray-500 min-h-screen">
    <!-- Navigation Bar -->
    <nav class="bg-gradient-to-b from-black to-transparent sticky top-0 z-30">
        <div class="max-w-8xl mx-auto px-4">
          <div class="flex justify-between items-center py-4 px-4">
            <!-- Logo -->
            <a href="/dashboard" class="flex items-center group">
              <div
                class="inline-flex items-center justify-center w-10 h-10 bg-primary rounded-full mr-3 transition-transform group-hover:scale-105"
              >
                <i class="fas fa-wallet text-white"></i>
              </div>
              <h1 class="text-xl font-bold text-gray-400 hidden sm:block group-hover:text-primary transition-colors">FinTrack</h1>
            </a>
  
            <!-- Navigation Links -->
            <div class="flex items-center justify-between space-x-2 flex-wrap">
              <a
                href="/dashboard"
                class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-secondary transition duration-200 flex items-center justify-center"
                title="Dashboard"
              >
                <i class="fas fa-home"></i>
              </a>
              <a
                href="/transactions"
                class="text-gray-300 hover:text-primary transition duration-200 px-4 py-2 bg-black bg-opacity-40 backdrop-blur-md rounded-lg flex items-center justify-center"
                title="Transactions"
              >
                <i class="fas fa-exchange-alt"></i>
              </a>
              <a
                href="/budgets"
                class="text-gray-300 hover:text-primary transition duration-200 px-4 py-2 bg-black bg-opacity-40 backdrop-blur-md rounded-lg flex items-center justify-center"
                title="Budgets"
              >
                <i class="fas fa-chart-pie"></i>
              </a>
              <a
                href="/categories"
                class="text-gray-300 hover:text-primary transition duration-200 px-4 py-2 bg-black bg-opacity-40 backdrop-blur-md rounded-lg flex items-center justify-center"
                title="Categories"
              >
                <i class="fas fa-tags"></i>
              </a>
              <a
                href="/saving-goals"
                class="text-gray-300 hover:text-primary transition duration-200 px-4 py-2 bg-black bg-opacity-40 backdrop-blur-md rounded-lg flex items-center justify-center"
                title="Saving Goals"
              >
                <i class="fas fa-piggy-bank"></i>
              </a>
              <a
                href="/notifications"
                class="text-gray-300 hover:text-primary transition duration-200 px-4 py-2 bg-black bg-opacity-40 backdrop-blur-md rounded-lg flex items-center justify-center"
                title="Notifications"
              >
                <i class="fas fa-bell"></i>
              </a>
              <a
                href="/export"
                class="text-gray-300 hover:text-primary transition duration-200 px-4 py-2 bg-black bg-opacity-40 backdrop-blur-md rounded-lg flex items-center justify-center"
                title="Export"
              >
                <i class="fas fa-download"></i>
              </a>
              <a
                href="/profile"
                class="text-gray-300 hover:text-primary transition duration-200 px-4 py-2 bg-black bg-opacity-40 backdrop-blur-md rounded-lg flex items-center justify-center"
                title="Profile"
              >
                <i class="fas fa-user"></i>
              </a>
              <a
                href="/auth/logout"
                class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition duration-200 flex items-center justify-center"
                title="Logout"
              >
                <i class="fas fa-sign-out-alt"></i>
              </a>
            </div>
          </div>
        </div>
      </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-white mb-4">
                <i class="fas fa-download mr-3"></i>Export Your Data
            </h1>
            <p class="text-gray-300 text-lg">Download your financial data in various formats for analysis and backup</p>
        </div>

        <!-- Messages -->
        <% if (error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                <i class="fas fa-exclamation-triangle mr-2"></i><%= error %>
            </div>
        <% } %>

        <% if (success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
                <i class="fas fa-check-circle mr-2"></i><%= success %>
            </div>
        <% } %>

        <!-- Export Options Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            
            <!-- Transactions Export -->
            <div class="bg-white rounded-xl shadow-lg p-6 card-hover">
                <div class="text-center mb-4">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
                        <i class="fas fa-exchange-alt text-blue-600 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Transactions</h3>
                    <p class="text-gray-600 text-sm">Export your income and expense records</p>
                </div>

                <!-- Transaction Filters -->
                <div class="space-y-3 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Date Range</label>
                        <div class="grid grid-cols-2 gap-2">
                            <input type="date" id="transactionStartDate" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
                            <input type="date" id="transactionEndDate" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Type</label>
                        <select id="transactionType" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
                            <option value="all">All Types</option>
                            <option value="Income">Income Only</option>
                            <option value="Expense">Expense Only</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                        <select id="transactionCategory" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
                            <option value="all">All Categories</option>
                            <% categories.forEach(category => { %>
                                <option value="<%= category.id %>"><%= category.name %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>

                <div class="space-y-2">
                    <button onclick="exportTransactions('csv')" class="w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition duration-200 export-btn">
                        <i class="fas fa-file-csv mr-2"></i>Export as CSV
                    </button>
                    <button onclick="exportTransactions('pdf')" class="w-full bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 transition duration-200 export-btn">
                        <i class="fas fa-file-pdf mr-2"></i>Export as PDF
                    </button>
                </div>
            </div>

            <!-- Budgets Export -->
            <div class="bg-white rounded-xl shadow-lg p-6 card-hover">
                <div class="text-center mb-4">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-purple-100 rounded-full mb-4">
                        <i class="fas fa-wallet text-purple-600 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Budgets</h3>
                    <p class="text-gray-600 text-sm">Export your budget information and spending</p>
                </div>

                <!-- Budget Filters -->
                <div class="space-y-3 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Year</label>
                        <select id="budgetYear" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
                            <% availableYears.forEach(year => { %>
                                <option value="<%= year %>" <%= year === currentYear ? 'selected' : '' %>><%= year %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Month</label>
                        <select id="budgetMonth" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
                            <% months.forEach(month => { %>
                                <option value="<%= month.value %>" <%= month.value === currentMonth ? 'selected' : '' %>><%= month.name %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>

                <button onclick="exportBudgets()" class="w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition duration-200 export-btn">
                    <i class="fas fa-file-csv mr-2"></i>Export as CSV
                </button>
            </div>

            <!-- Saving Goals Export -->
            <div class="bg-white rounded-xl shadow-lg p-6 card-hover">
                <div class="text-center mb-4">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-yellow-100 rounded-full mb-4">
                        <i class="fas fa-piggy-bank text-yellow-600 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Saving Goals</h3>
                    <p class="text-gray-600 text-sm">Export your saving goals and progress</p>
                </div>

                <button onclick="exportSavingGoals()" class="w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition duration-200 export-btn">
                    <i class="fas fa-file-csv mr-2"></i>Export as CSV
                </button>
            </div>

            <!-- Comprehensive Report -->
            <div class="bg-white rounded-xl shadow-lg p-6 card-hover md:col-span-2 lg:col-span-3">
                <div class="text-center mb-4">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-4">
                        <i class="fas fa-chart-bar text-indigo-600 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Comprehensive Financial Report</h3>
                    <p class="text-gray-600 text-sm">Complete financial overview including transactions, budgets, and saving goals</p>
                </div>

                <!-- Report Filters -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4 max-w-md mx-auto">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Year</label>
                        <select id="reportYear" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
                            <% availableYears.forEach(year => { %>
                                <option value="<%= year %>" <%= year === currentYear ? 'selected' : '' %>><%= year %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Month</label>
                        <select id="reportMonth" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
                            <% months.forEach(month => { %>
                                <option value="<%= month.value %>" <%= month.value === currentMonth ? 'selected' : '' %>><%= month.name %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>

                <button onclick="exportFinancialReport()" class="w-full max-w-md mx-auto bg-indigo-600 text-white py-3 px-6 rounded-md hover:bg-indigo-700 transition duration-200 export-btn">
                    <i class="fas fa-file-pdf mr-2"></i>Generate Complete Report (PDF)
                </button>
            </div>
        </div>

        <!-- Export Tips -->
        <div class="mt-8 bg-blue-100 border border-blue-200 rounded-lg p-6">
            <ul class="text-blue-700 space-y-2">
                <li><i class="fas fa-check mr-2"></i>CSV files can be opened in Excel, Google Sheets, or any spreadsheet application</li>
                <li><i class="fas fa-check mr-2"></i>PDF reports are perfect for sharing or printing</li>
            </ul>
        </div>
    </div>

    <script>
        // Set default dates
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            const lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0);
            
            document.getElementById('transactionStartDate').value = firstDay.toISOString().split('T')[0];
            document.getElementById('transactionEndDate').value = lastDay.toISOString().split('T')[0];
        });

        function exportTransactions(format) {
            const startDate = document.getElementById('transactionStartDate').value;
            const endDate = document.getElementById('transactionEndDate').value;
            const type = document.getElementById('transactionType').value;
            const category = document.getElementById('transactionCategory').value;

            let url = `/export/transactions/${format}?`;
            if (startDate) url += `startDate=${startDate}&`;
            if (endDate) url += `endDate=${endDate}&`;
            if (type !== 'all') url += `type=${type}&`;
            if (category !== 'all') url += `categoryId=${category}&`;

            window.open(url, '_blank');
        }

        function exportBudgets() {
            const year = document.getElementById('budgetYear').value;
            const month = document.getElementById('budgetMonth').value;
            
            window.open(`/export/budgets/csv?year=${year}&month=${month}`, '_blank');
        }

        function exportSavingGoals() {
            window.open('/export/saving-goals/csv', '_blank');
        }

        function exportFinancialReport() {
            const year = document.getElementById('reportYear').value;
            const month = document.getElementById('reportMonth').value;
            
            window.open(`/export/financial-report/pdf?year=${year}&month=${month}`, '_blank');
        }
    </script>
</body>
</html>
